<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:padding="@dimen/dp_6">
    <TextView
        android:id="@+id/tvDate"
        style="@style/chat_item_date"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xulc.chat.View.RoundImageView
            android:id="@+id/headImg"
            style="@style/chat_item_avatar"
            app:circle="true"/>
        <RelativeLayout
            style="@style/chat_item_content"
            android:layout_toRightOf="@+id/headImg">
            <ImageView
                android:id="@+id/chatImg"
                style="@style/chat_item_image_content"
                android:src="@mipmap/ic_launcher"></ImageView>
        </RelativeLayout>
    </RelativeLayout>


</LinearLayout>